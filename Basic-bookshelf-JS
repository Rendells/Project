// background
background(97, 56, 12);

var book = {
    title: "I Know Why the Caged Bird Sings",
    stars: 4
};


// draw shelf
fill(173, 117, 33);
rect(0, 120, width, 10);

// Second shelf
fill(173, 117, 33);
rect(0, 300, width, 10);


// draw one book
