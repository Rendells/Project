rect(10, 20, 90, 100);
fill(0, 0, 0);
text(book.title, 15, 29, 70, 100);
for (var i = 0; i < book.stars; i++) {
    image(getImage("cute/Star"), 13 + i * 20, 90, 20, 30);
}


